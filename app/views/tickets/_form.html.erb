<%= form_for([@ticket.event, @ticket], html: {remote: true }) do |f| %>
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-labelledby="myModalApuesta" aria-hidden="true" >Ã—</button>
    <h3 id="myModalLabel">Apuesta</h3>
  </div>
  <div class="modal-body">
    <p>
      <%= f.label :apuesta %>
