<div class="container">
  <div class="offset3 span6">
    <div class="well">
      <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), 
          :html => { :class => "form-horizontal" }) do |f| %>
        <!--<%= devise_error_messages! %>-->
        <legend class="text-center">CREAR CUENTA</legend>

        <div class="control-group">
          <%= f.label :nombre, :class => "control-label" %>
          <div class="controls">
            <%= f.text_field :nombre, :autofocus => true %>
          </div>
        </div>

        <div class="control-group">
          <%= f.label :email, :class => "control-label" %>
          <div class="controls">
            <%= f.email_field :email %>
          </div>
        </div>

        <div class="control-group">
          <%= f.label :password, "Contraseña", :class => "control-label" %>
          <div class="controls">
            <%= f.password_field :password %>
          </div>
        </div>

        <div class="control-group">
          <%= f.label :password_confirmation, "Confirmar Contraseña", :class => "control-label" %>
          <div class="controls">
            <%= f.password_field :password_confirmation %>
          </div>
        </div>

        <div class="control-group">
          <div class="controls">`
            <%= f.submit "Crear Cuenta", :class => "btn" %>
          </div>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>