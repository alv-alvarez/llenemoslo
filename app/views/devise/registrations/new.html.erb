<div class="container">
  <div class="form-user login"> 
    <div class="offset6 span6">
      <h1>REGISTRO DE USUARIO</h1>
      <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), 
          :html => { :class => "form-horizontal form-register" }) do |f| %>
        <!--<%= devise_error_messages! %>-->
        
        <div class="control-group">
          <%= f.label :nombre, "NOMBRE", :class => "control-label" %>
          <div class="controls">
            <%= f.text_field :nombre, :autofocus => true %>
          </div>
        </div>

        <div class="control-group">
          <%= f.label :email, "EMAIL" ,:class => "control-label" %>
          <div class="controls">
            <%= f.email_field :email %>
          </div>
        </div>

        <div class="control-group">
          <%= f.label :password, "CONTRASEÑA", :class => "control-label" %>
          <div class="controls">
            <%= f.password_field :password %>
          </div>
        </div>

        <div class="control-group">
          <%= f.label :password_confirmation, "CONFIRMAR CONTRASEÑA", :class => "control-label" %>
          <div class="controls">
            <%= f.password_field :password_confirmation %>
          </div>
        </div>

        <div class="control-group">
          <div class="controls">`
            <%= f.submit "CREAR CUENTA", :class => "btn" %>
          </div>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>