<div class="container">
  <div class="offset3 span6">
    <div class="well">
      <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), 
          :html => { :method => :post, :class => "form-horizontal" }) do |f| %>
      <%= devise_error_messages! %>

      <legend class="text-center">Olvidaste tu contraseña?</legend>

      <p>Te enviaremos un correo electrónico con instrucciones para acceder a tu cuenta</p>

      <div class="control-group">
        <%= f.label :email, :class => "control-label" %>
        <div class="controls">
          <%= f.email_field :email, :autofocus => true %>
        </div>
      </div>

      <div class="control-group">
        <div class="controls">
          <%= f.submit "Enviar", :class => "btn" %>
        </div>
      </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>  